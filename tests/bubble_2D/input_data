## Bubble problem, in 2D

# grid dimensions
-NX 128
-NY 128

# numerical params
-flow_relaxation_mode 1 # MRT
-discretization d2q9
-stencil_size 1

# phase parameters
-nphases 2

## phase 1
-phase1_name outer
-mm_outer 1.
-tau_outer 1.6
-s1_outer 0.1
-s2_outer 0.2
-s3_outer 0.625

## phase 2
-phase2_name inner
-mm_inner 1.0
-tau_inner 0.7204
-s1_inner 1.8
-s2_inner 1.8
-s3_inner 1.8

# forcing coefficients
-gvt 0.0,0.0
-g_11 0.0
-g_22 0.0
-g_12 0.1
-g_21 0.1

# initial conditions
-rho_outer 0.99,0.01
-rho_inner 0.01,0.99

# boundary conditions
-bc_periodic_x
-bc_periodic_y

# timestepping
-npasses 1
-kwrite 1

# geometry
-walls_type 2

# i/o
-output_file_prefix test_solution/

